<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auto.logistics">

    <!-- 网络请求权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- andbase权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 照相机拍照存储权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- 获得本机手机号权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <!-- 用于扫描二维码 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <!--Gps权限-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <!--全局ALERT-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"></uses-permission>

    <!--讯飞语音权限-->
    <!--连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!--读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 程序主入口 -->
        <activity
            android:name=".Activity.GuideActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录页面 -->
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- 忘记密码页面 -->
        <activity
            android:name=".Activity.MissPwdAcitvity"
            android:screenOrientation="portrait" />

        <!-- 程序主页面 -->
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <!-- 接单页面 -->
        <activity
            android:name=".Activity.OrderActivity"
            android:screenOrientation="portrait" />
        <!-- 装车页面 -->
        <activity
            android:name=".Activity.InstallCarActivity"
            android:screenOrientation="portrait" />
        <!-- 发货页面 -->
        <activity
            android:name=".Activity.SendGoodsActivity"
            android:screenOrientation="portrait" />
        <!-- 送到页面 -->
        <activity
            android:name=".Activity.ReachAcitvity"
            android:screenOrientation="portrait" />
        <!-- 修改密码 -->
        <activity
            android:name=".Activity.RevisePWDActivity"
            android:screenOrientation="portrait" />
        <!-- 派送记录 -->
        <activity
            android:name=".Activity.DispatchNotesActivity"
            android:screenOrientation="portrait" />
        <!-- 派送详情 -->
        <activity
            android:name=".Activity.DispatchDetailActivity"
            android:screenOrientation="portrait" />
        <!--运单状态详情-->
        <activity
            android:name=".Activity.WaybillStateNotes"
            android:screenOrientation="portrait" />
        <!--修改手机号-->
        <activity
            android:name=".Activity.EditPhoneActivity"
            android:screenOrientation="portrait" />
        <!--图片显示页面-->
        <activity
            android:name=".Activity.ImageShowActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Animation.Dialog" />
        <!--详情页面图片查看-->
        <activity
            android:name=".Activity.DetailShow"
            android:screenOrientation="portrait"
            android:theme="@android:style/Animation.Dialog" />
        <!--Zxin的Activity-->、
        <activity android:name=".zxing.DecodeActivity" />
        <!--修理车-->
        <activity
            android:name=".Activity.FixCar"
            android:screenOrientation="portrait" />
        <!--扫描之后跳转的接单页-->
        <activity
            android:name=".Activity.ScanOrderAcitvity"
            android:screenOrientation="portrait" />
        <!--扫描之后跳转的装车页-->
        <activity
            android:name=".Activity.ScanInstall"
            android:screenOrientation="portrait" />
        <!--扫描之后跳转送货页-->
        <activity
            android:name=".Activity.ScanSendGoods"
            android:screenOrientation="portrait" />
        <!--扫描之后跳转送货页面-->
        <activity
            android:name=".Activity.ScanReach"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.FixCarHistory"
            android:screenOrientation="portrait"/>
        <!--消息轮询服务-->
        <service android:name=".Service.MessageService" />
        <!--每分钟记录车辆位置-->
        <service android:name=".Service.CarGpsService" />
        <!--用于接收轮询消息的广播-->
        <receiver android:name=".BroadcastReceiver.MessageBroadcastReceiver">
            <intent-filter>
                <action android:name="com.auto.logistics.messagereceiver" />
            </intent-filter>
        </receiver>

    </application>

</manifest>