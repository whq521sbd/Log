<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">
    <!--标题区域-->
    <FrameLayout
        android:id="@+id/sendgoogs_titleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00C3C5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="出场详情"
            android:textColor="#fff"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/IV_sendgoodsgoback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:padding="6dp"
            android:src="@mipmap/back_img" />
    </FrameLayout>

    <!--展示区域，控制横纵-->

    <!--控制横竖显示-->
    <LinearLayout
        android:id="@+id/infoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendgoogs_titleArea"
        android:orientation="vertical">
        <LinearLayout
            android:background="#fff"
            android:id="@+id/LL_senditemArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--单个条目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/users"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="收货人："
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendRecPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>
            <TextView
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#ABBFC6"
                android:layout_width="match_parent"
                android:layout_height="0.6px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/phone"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="收货人电话："
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendRecTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:autoLink="phone"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#ABBFC6"
                android:layout_width="match_parent"
                android:layout_height="0.6px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/address"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="收货人地址："
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendRecAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>
            <TextView
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#ABBFC6"
                android:layout_width="match_parent"
                android:layout_height="0.6px" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/time"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="装车时间："
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/TV_SendDepTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/driver"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="装车人："
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendDepUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text=" | 货物详情"
            android:textSize="16sp"
            android:typeface="sans" />

        <RelativeLayout
            android:id="@+id/photoArea"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff">

            <TextView
                android:id="@+id/ED_installRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:text="最少上传一张照片（长按可删除照片）"
                android:textSize="18sp"
                android:typeface="sans" />


        <!--照片区域-->
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/IV_installUpImg1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_installUpImg2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_installUpImg3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IV_installAddImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@mipmap/addimg" />

        </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <!--按钮区域  上面布局有above 取消后可能导致界面比例失真-->
    <LinearLayout
        android:layout_below="@+id/infoArea"
        android:id="@+id/LL_buttonArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_sendgoods"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bluebuttonstyle"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="确认送货"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_sendReturn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_sendgoods"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            android:clickable="true"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>