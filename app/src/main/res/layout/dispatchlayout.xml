<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题栏区域-->

    <TextView
        android:id="@+id/dispatchttitleArea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00C3C5"
        android:gravity="center"
        android:text="物流中心"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView

        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dispatchttitleArea"
        android:background="#fff"
        android:padding="7dp"
        android:text=" | 运单列表"
        android:textColor="#45494A"
        android:typeface="sans" />

    <TextView
        android:id="@+id/Inactionline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title"
        android:background="#000"
        android:visibility="gone" />


    <!--按钮第一排区域-->
    <LinearLayout
        android:id="@+id/mylogisticsArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Inactionline"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <TextView
            android:id="@+id/TV_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/stop"
            android:focusable="true"
            android:gravity="center"
            android:text="暂停接单"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace" />

        <FrameLayout
            android:id="@+id/frame0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>

        <TextView
            android:layout_width="0.6px"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="visible" />

        <!-- -->
        <TextView
            android:id="@+id/TV_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/accept"
            android:focusable="true"
            android:gravity="center"
            android:text="进场签到"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace"></TextView>

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>


    </LinearLayout>


    <!--按钮第二排区域-->
    <LinearLayout
        android:id="@+id/mylogisticsArea2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mylogisticsArea"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <TextView
            android:id="@+id/TV_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/install"
            android:focusable="true"
            android:gravity="center"
            android:text="装配货物"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="gone"></FrameLayout>


        <TextView
            android:id="@+id/TV_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-19dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/send"
            android:focusable="true"
            android:gravity="center"
            android:text="开始配送"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace" />


        <FrameLayout
            android:id="@+id/frame3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>

        <TextView
            android:layout_width="0.6px"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TV_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/black"
            android:focusable="true"
            android:gravity="center"
            android:text="配送完成"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace" />

        <FrameLayout
            android:id="@+id/frame4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>


    </LinearLayout>


    <!--按钮第三排区域-->
    <LinearLayout
        android:id="@+id/mylogisticsArea3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mylogisticsArea2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <TextView
            android:id="@+id/TV_eating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/eating"
            android:gravity="center"
            android:text="吃饭休息"
            android:typeface="monospace" />

        <FrameLayout
            android:id="@+id/frame5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>


        <TextView
            android:layout_width="0.6px"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="visible" />


        <TextView
            android:id="@+id/TV_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/fix"
            android:focusable="true"
            android:gravity="center"
            android:text="车辆检修"
            android:textColor="@drawable/textstyle"
            android:typeface="monospace" />

        <FrameLayout
            android:id="@+id/frame6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>

    </LinearLayout>

    <!--按钮第四排区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mylogisticsArea3"
        android:layout_below="@+id/mylogisticsArea3"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/TV_blockup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/blockup"
            android:gravity="center"
            android:text="车辆停用"
            android:typeface="monospace"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/frame7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/ture"
            android:visibility="invisible"></FrameLayout>
    </LinearLayout>


</RelativeLayout>