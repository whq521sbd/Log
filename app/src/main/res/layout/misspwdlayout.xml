<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00C3C5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="15dp"
            android:text="重置密码"
            android:textColor="#fff"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/tv_Rback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:padding="6dp"
            android:src="@mipmap/back_img" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <EditText
            android:inputType="phone"
            android:id="@+id/ed_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@null"
            android:drawableLeft="@mipmap/user_img"
            android:drawablePadding="10dp"
            android:hint="手机号" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgclean1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/cleanall_img" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/ll_phone_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#ABBFC6" />

    <RelativeLayout
        android:id="@+id/ll_codelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_phone_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:inputType="number"
            android:id="@+id/ed_Identifyingcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/code_img"
            android:drawablePadding="10dp"
            android:hint="验证码"
            android:minWidth="200dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgclean2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_getcode"
            android:src="@mipmap/cleanall_img" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="| 获取验证码"
            android:textColor="#00C3C5"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/ll_codelayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#ABBFC6" />


    <LinearLayout
        android:id="@+id/ll_pwdlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/ed_NewMregisterPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/pwd_img"
            android:drawablePadding="10dp"
            android:hint="新密码"
            android:inputType="textPassword" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgclean3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_getcode"
            android:src="@mipmap/cleanall_img" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/ll_pwdlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#ABBFC6" />

    <LinearLayout
        android:id="@+id/ll_Confirmpwdlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pwdlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_confirmPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/pwd_img"
            android:drawablePadding="10dp"
            android:hint="确认密码"
            android:inputType="textPassword" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgclean4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_getcode"
            android:src="@mipmap/cleanall_img" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/ll_Confirmpwdlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#ABBFC6" />


    <TextView
        android:id="@+id/tv_resetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_Confirmpwdlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bluebuttonstyle"
        android:gravity="center"
        android:text="重置"
        android:textColor="#fff"
        android:textSize="25sp"
        android:typeface="sans" />

    <CheckBox
        android:id="@+id/cheked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_resetting"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14.3dp"
        android:checked="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cheked"
        android:layout_below="@+id/tv_resetting"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/cheked"
        android:text="我已阅读并同意" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_below="@+id/tv_resetting"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text"
        android:gravity="bottom"
        android:text="《用户协议》"
        android:textColor="#00C3C5" />
</RelativeLayout>