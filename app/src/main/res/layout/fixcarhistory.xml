<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00C3C5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="15dp"
            android:text="检修记录"
            android:textColor="#fff"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/IV_Rback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:padding="6dp"
            android:src="@mipmap/back_img" />
    </FrameLayout>


    <!--查询区域-->
    <LinearLayout
        android:id="@+id/Select_Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_title"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="查询日期："
            android:textColor="#fff"
            android:textSize="16sp"
            android:typeface="sans" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#fff">

            <EditText
                android:id="@+id/TV_fixcarYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="年"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:selectAllOnFocus="true"
                android:text="-"
                android:textSize="14sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/TV_fixcarmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="月"
                android:inputType="number"
                android:padding="3dp"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:typeface="monospace" />
        </LinearLayout>


        <TextView
            android:id="@+id/TV_Qurey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="查询"
            android:textColor="@drawable/qrystyle"
            android:textSize="16dp"
            android:typeface="serif" />
    </LinearLayout>

    <ListView
        android:id="@+id/LV_fxihistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Select_Area"
        android:divider="@color/colorPrimary"
        android:dividerHeight="0.6px"
        android:visibility="visible"></ListView>


</RelativeLayout>