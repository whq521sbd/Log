                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_DeliUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
