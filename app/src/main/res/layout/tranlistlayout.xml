            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="收货人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_RecPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
