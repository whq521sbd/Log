<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--控制横竖显示-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vp_ViewPager"
                android:background="#FE6E03"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text=" | 运单详情"
                android:textColor="#fff"
                android:typeface="sans" />

            <!--单个条目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="运单编号："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_TaskNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="交易单号："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_Serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="订单号："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_TransNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="区域："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:text="街道："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_Street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:minWidth="110dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="商品名称："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_GoodsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="重量："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="110dp"
                    android:padding="3dp"
                    android:typeface="sans" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="买家单位："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_ComName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="距离："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="110dp"
                    android:padding="3dp"
                    android:typeface="sans" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="收货人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_RecPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="手机："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_RecTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:autoLink="phone"
                    android:minWidth="110dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="收货人地址："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_RecAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="接单时间："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_AccTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="派单人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_AccUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="100dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="装车时间："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_PackTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="装车人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_PackUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="100dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="出发时间："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_DepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="操作人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_DepUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="100dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="送达时间："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="送达人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_SendUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="100dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="收货时间："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_DeliTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="收货人："
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TV_DeliUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="100dp"
                    android:padding="3dp"
                    android:text=""
                    android:typeface="sans" />

            </LinearLayout>


            <!--图片展示-->
            <!--装车图片-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vp_ViewPager"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text=" | 装车图片"
                android:textColor="#45494A"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IV_pickPic0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_pickPic1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_pickPic2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vp_ViewPager"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text=" | 配送图片"
                android:textColor="#45494A"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IV_depPics0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_depPics1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_depPics2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vp_ViewPager"
                android:layout_marginBottom="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text=" | 送达图片"
                android:textColor="#45494A"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IV_sendPic0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_sendPic1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/IV_sendPic2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>